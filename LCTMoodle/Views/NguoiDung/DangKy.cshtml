@{
    ViewData["TieuDe"] = "Đăng ký";
    Layout = "~/Views/LCT/Khung.cshtml";
}
@section Styles {
}
@section Scripts {    
    <script type="text/javascript" src="/NguoiDung.js/NguoiDung"></script>
}

<article class="hop-form hop-2-vien">
    <section class="tieu-de">
        Đăng ký tài khoản LCTMoodle
        <br />
        để được trải nghiệm các khoá học bổ ích        
    </section>
    <section class="noi-dung">
        <form class="lct-form" action="/NguoiDung/XuLyThem" method="POST" id="dang_ky">
            <article>
                <ul>
                    <li>
                        <section class="tieu-de">
                            <label>(*) Tên tài khoản:</label>
                        </section>
                        <section class="noi-dung">
                            <article class="input">
                                <input type="text" id="TenTaiKhoan" name="TenTaiKhoan" data-validate="bat-buoc"/>
                            </article>
                        </section>
                    </li>
                    <li>
                        <section class="tieu-de">
                            <label>(*) Mật khẩu:</label>
                        </section>
                        <section class="noi-dung">
                            <article class="input">
                                <input type="password" id="MatKhau" name="MatKhau" data-validate="bat-buoc" />
                            </article>
                        </section>
                    </li>
                    <li>
                        <section class="tieu-de">
                            <label>(*) Nhập lại mật khẩu:</label>
                        </section>
                        <section class="noi-dung">
                            <article class="input">
                                <input type="password" id="NhapLaiMatKhau" />
                            </article>
                        </section>
                    </li>
                    <li>
                        <section class="tieu-de">
                            <label>(*) Email:</label>
                        </section>
                        <section class="noi-dung">
                            <article class="input">
                                <input type="text" name="Email" data-validate="email bat-buoc"/>
                            </article>
                        </section>
                    </li>
                    <li>
                        <section class="tieu-de">
                            <label>(*) Họ</label>
                        </section>
                        <section class="noi-dung">
                            <article class="input">
                                <input type="text" name="Ho" data-validate="bat-buoc" />
                            </article>
                        </section>
                    </li>
                    <li>
                        <section class="tieu-de">
                            <label>(*) Tên</label>
                        </section>
                        <section class="noi-dung">
                            <article class="input">
                                <input type="text" name="Ten" data-validate="bat-buoc" />
                            </article>
                        </section>
                    </li>
                    <li>
                        <section class="tieu-de">
                            <label>(*) Ngày sinh:</label>
                        </section>
                        <section class="noi-dung">
                            <article class="input">
                                <input data-input-type="ngay" name="NgaySinh" value="" data-validate="bat-buoc" />
                            </article>
                        </section>
                    </li>
                    <li>
                        <section class="tieu-de">
                            <label>Địa chỉ:</label>
                        </section>
                        <section class="noi-dung">
                            <article class="input">
                                <input type="text" name="DiaChi" />
                            </article>
                        </section>
                    </li>
                    <li>
                        <section class="tieu-de">
                            <label>Số điện thoại:</label>
                        </section>
                        <section class="noi-dung">
                            <article class="input">
                                <input type="text" name="SoDienThoai" />
                            </article>
                        </section>
                    </li>
                    <li>
                        <section class="tieu-de">
                            <label>Hình đại diện</label>
                        </section>
                        <section class="noi-dung">
                            <article class="input">
                                <input type="file" name="HinhDaiDien" />
                            </article>
                        </section>
                    </li>
                    <li>
                        <section class="tieu-de">
                            <label>&nbsp;</label>
                        </section>
                        <section class="noi-dung">
                            <article class="input">                                
                                <input type="checkbox" name="ChapNhanQuyDinh" data-text="Chấp nhận quy định của Mạng xã hội LCT Moodle" />                                
                            </article>
                        </section>
                    </li>                    
                </ul>
                <section class="khung-button">
                    <button type="submit" class="chap-nhan">
                        Đăng Ký
                    </button>
                    <button type="reset" class="can-than">
                        Làm lại
                    </button>
                </section>
            </article>
        </form>
    </section>
</article>

