@{
    ViewData["TieuDe"] = "Đăng nhập";    
    Layout = "~/Views/LCT/Khung.cshtml";    
}
@section Styles {  
}
@section Scripts {
    <script type="text/javascript" src="/NguoiDung.js/NguoiDung"></script>
}

<article class="hop-form hop-2-vien">
    <section class="tieu-de">
        LCTMoodle
        <br />
        Mạng xã hội học tập của mọi người
    </section>
    <section class="noi-dung">
        <form class="lct-form" id="dang_nhap" action="/NguoiDung/XuLyDangNhap" method="post">
            <article>
                <ul>
                    <li>
                        <section class="tieu-de">
                            <label>Tên tài khoản:</label>
                        </section>
                        <section class="noi-dung">
                            <article class="input">
                                <input type="text" name="TenTaiKhoan" data-validate="bat-buoc"/>                                
                            </article>                            
                        </section>
                    </li>
                    <li>
                        <section class="tieu-de">
                            <label>Mật khẩu:</label>
                        </section>
                        <section class="noi-dung">
                            <article class="input">
                                <input type="password" name="MatKhau" data-validate="bat-buoc" />
                            </article>
                        </section>
                    </li>
                    <li>           
                        <section class="tieu-de">
                            <label>&nbsp;</label>
                        </section>          
                        <section class="noi-dung">
                            <article class="input">                                
                                <input type="checkbox" name="GhiNho" data-text="Ghi nhớ" />
                            </article>
                        </section>
                    </li>                    
                    <li>
                        <section class="tieu-de">
                            <label>&nbsp;</label>
                        </section>
                        <section class="noi-dung">                            
                                <a href="/NguoiDung/QuenMatKhau/">Quên mật khẩu?</a>                            
                        </section>
                    </li>                    
                </ul>
                <section class="khung-button">
                    <button type="submit" class="chap-nhan">
                        Đăng nhập
                    </button>
                </section>
            </article>
        </form>
    </section>
</article>