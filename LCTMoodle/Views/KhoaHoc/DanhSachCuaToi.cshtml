@model List<DTOLayer.KhoaHocDTO>

@{    
    Layout = "~/Views/LCT/Khung.cshtml";

    ViewData["TieuDe"] = "Danh sách khóa học của bạn";

    List<DTOLayer.KhoaHocDTO> 
        dsThamGia = ViewData["ThamGia"] as List<DTOLayer.KhoaHocDTO>,
        dsDangKy = ViewData["DangKy"] as List<DTOLayer.KhoaHocDTO>,
        dsDuocMoi = ViewData["DuocMoi"] as List<DTOLayer.KhoaHocDTO>,
        dsBiChan = ViewData["BiChan"] as List<DTOLayer.KhoaHocDTO>;
}

@section Styles {
    <link href="/DanhSach.css/KhoaHoc" rel="stylesheet" />
}

@if (dsThamGia == null && dsDangKy == null && dsDuocMoi == null && dsBiChan == null)
{
    <a href="/KhoaHoc/DanhSach">Bạn chưa tham gia khóa học nào, hãy tìm kiếm một khóa học mà bạn quan tâm</a>
    return;
}

@if (dsThamGia != null)
{
    <article class="hop">
        <section class="tieu-de">
            Danh sách khóa học bạn đã tham gia
        </section>
        <section class="noi-dung khung-khoa-hoc">
            <ul class="danh-sach">                
                @Html.Partial("~/Views/KhoaHoc/_DanhSach.cshtml", dsThamGia)
            </ul>
        </section>
    </article>      
}

@if (dsDangKy != null)
{
    <article class="hop">
        <section class="tieu-de">
            Danh sách khóa học bạn đã đăng ký
        </section>
        <section class="noi-dung khung-khoa-hoc">
            <ul class="danh-sach">                
                @Html.Partial("~/Views/KhoaHoc/_DanhSach.cshtml", dsDangKy)
            </ul>
        </section>
    </article>      
}

@if (dsDuocMoi != null)
{
    <article class="hop">
        <section class="tieu-de">
            Danh sách khóa học gửi lời mời cho bạn
        </section>
        <section class="noi-dung khung-khoa-hoc">
            <ul class="danh-sach">
                @Html.Partial("~/Views/KhoaHoc/_DanhSach.cshtml", dsDuocMoi)
            </ul>
        </section>
    </article>      
}

@if (dsBiChan != null)
{
    <article class="hop">
        <section class="tieu-de">
            Danh sách khóa học đã chặn bạn
        </section>
        <section class="noi-dung khung-khoa-hoc">
            <ul class="danh-sach">
                @Html.Partial("~/Views/KhoaHoc/_DanhSach.cshtml", dsBiChan)
            </ul>
        </section>
    </article>      
}