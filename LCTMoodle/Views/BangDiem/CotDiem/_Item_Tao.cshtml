@model DTOLayer.CotDiemDTO

<section class="tr item-cot-diem" data-doi-tuong="item-cot-diem" data-ma="@Model.ma">
    <section class="td">
        @Model.ten
    </section>
    <section class="td">
        @Model.heSo
    </section>
    <section class="td">
        @Model.moTa
    </section>
    <section class="td" style="position: relative">
        @(Model.ngay.HasValue ? Model.ngay.Value.ToString("d/M/yyyy") : null)
        <section class="khung-chuc-nang-lct" style="top: 1px; right: 1px;">
            <ul data-doi-tuong="cncd-@Model.ma">
                <li>
                    <a data-chuc-nang="xoa">Xóa cột điểm</a>
                </li>
            </ul>
            <button data-chuc-nang="tat-mo" data-mo-doi-tuong="cncd-@Model.ma">
                <i class="pe-7f-config"></i>
            </button>
        </section>
    </section>
</section>
