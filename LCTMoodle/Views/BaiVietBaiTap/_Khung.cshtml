@model List<DTOLayer.BaiVietBaiTapDTO>

<section class="hop hop-2-vien">
    <section class="tieu-de">
        Đăng bài viết
    </section>
    <form class="noi-dung lct-form" id="tao_bai_viet_form">
        <input type="hidden" name="KhoaHoc" value="@ViewData["MaKhoaHoc"]" />
        <article>
            <ul>
                <li>
                    <section class="noi-dung">
                        <article class="input">
                            <input data-validate="bat-buoc" data-chuc-nang="bat-dau-tao-bai-viet" type="text" name="TieuDe" placeholder="Tiêu đề" />
                        </article>
                    </section>
                </li>
                <li data-an>
                    <section class="noi-dung">
                        <section class="input">
                            <textarea data-validate="bat-buoc" name="NoiDung" data-input-type="editor" placeholder="Nội dung"></textarea>
                        </section>
                    </section>
                </li>
                <li data-an>
                    <section class="noi-dung">
                        <article class="input">
                            <input type="file" name="TapTin" />
                        </article>
                    </section>
                </li>
                <li data-an>
                    <section class="noi-dung">
                        <article class="input">
                            <input data-chuc-nang="tat-mo" data-mo="thoi-han" name="ThoiDiemHetHan" type="checkbox" data-text="Bài tập có thời hạn" />
                            <input data-doi-tuong="thoi-han" data-validate="bat-buoc" data-input-type="lct-thoi-gian" name="ThoiDiemHetHan_Gio" placeholder="Chọn thời gian" />
                            <input data-doi-tuong="thoi-han" data-validate="bat-buoc" data-input-type="lct-lich" name="ThoiDiemHetHan_Ngay" placeholder="Chọn ngày" />
                        </article>
                    </section>
                </li>
            </ul>
            <section data-an class="lct-khung-button">
                <button type="submit" class="chap-nhan">
                    Đăng
                </button>
            </section>
        </article>
    </form>
</section>

<section class="hop">
    <section class="tieu-de">
        Danh sách bài viết
    </section>
    <ul id="danh_sach_bai_viet" class="noi-dung">
        @foreach (var baiViet in Model)
        {
            @Html.Partial("~/Views/BaiVietBaiTap/_Item.cshtml", baiViet);
        }
    </ul>
</section>