@model List<DTOLayer.ChuDeDTO>
@{
    ViewData["TieuDe"] = "Quản lý chủ đề";
    Layout = "~/Views/LCT/Khung.cshtml";
}
@section Styles {
}
@section Scripts {
    <script src="/Khung.js/ChuDe/"></script>
    <script>
        $(function () {
            khoiTaoKhungChuDe($('#khung_quan_ly'));
        })
    </script>
}

<article class="hop">
    <section class="tieu-de">
        Quản lý chủ đề
    </section>
    <section id="khung_quan_ly" class="noi-dung lct-cay" data-ma="0">
        <section class="cay">
            <ul id="khung_cay" class="nut">
                @Html.Partial("~/Views/ChuDe/_Cay_Item.cshtml", Model, new ViewDataDictionary()
                {
                    { "Ma", 0 },
                    { "Ten", "Danh sách" }
                })
            </ul>
        </section>
        <section class="con">
            <ul id="khung_danh_sach" class="khung-danh-sach">@Html.Partial("~/Views/ChuDe/_DanhSach.cshtml", Model)</ul>   
            <a data-chuc-nang="tao">
                <i class="pe-7s-plus"></i>
                Hiện chưa có nút con, hãy tạo một nút con mới
            </a>
        </section>
        <section class="khung-chuc-nang">
            <ul>
                <li>
                    <a class="pe-7s-tools"></a>
                </li>
                <li>
                    <a data-chuc-nang="tao" class="pe-7s-plus">
                        <u></u>
                    </a>
                </li>
            </ul>
        </section>
    </section>
</article>