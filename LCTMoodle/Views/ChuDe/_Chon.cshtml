@model DTOLayer.ChuDeDTO
@{
    var dsCon = ViewData["DSCon"] as List<DTOLayer.ChuDeDTO>;
}

<section id="khung_chu_de" class="noi-dung lct-cay" data-ma="0" data-chon>
    <section class="cay">
        <ul id="khung_cay" class="nut">
            @Html.Partial("~/Views/ChuDe/_Cay_Item.cshtml", dsCon, new ViewDataDictionary()
            {
                { "Ma", Model == null ? 0 : Model.ma },
                { "Ten", Model == null ? "Danh sách" : Model.ten }
            }) 
        </ul>
    </section>
    <section class="con">
        <ul id="khung_danh_sach" class="khung-danh-sach">@Html.Partial("~/Views/ChuDe/_DanhSach.cshtml", dsCon, new ViewDataDictionary() { { "CoChon", true } })</ul>
        <a data-chuc-nang="tao">
            <i class="pe-7s-plus"></i>
            Hiện chưa có nút con, hãy tạo một nút con mới
        </a>
    </section>
    <section class="khung-chuc-nang">
        <ul>
            <li>
                <a class="pe-7s-tools"></a>
            </li>
            <li>
                <a data-chuc-nang="chon-nut-ht" class="pe-7s-check">
                    <u></u>
                </a>
            </li>   
            <li>
                <a data-chuc-nang="tao" class="pe-7s-plus">
                    <u></u>
                </a>
            </li>   
        </ul>
    </section>
</section>
