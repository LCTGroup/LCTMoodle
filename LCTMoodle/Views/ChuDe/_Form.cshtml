<section class="tieu-de">
    Tạo chủ đề
</section>
<form id="tao_chu_de_form" action="/ChuDe/XuLyThemChuDe" method="post" class="lct-form">
    <input type="hidden" name="MaChuDeCha" value="@ViewData["MaChuDeCha"]" />
    <input type="hidden" name="PhamVi" value="@ViewData["PhamVi"]" />
    <article>
        <ul>
            <li>
                <section class="tieu-de">
                    <label>
                        Tên chủ đề:
                    </label>
                </section>
                <section class="noi-dung">
                    <article class="input">
                        <input type="text" name="Ten" placeholder="Nhập tên chủ đề..." />
                    </article>
                </section>
            </li>
            <li>
                <section class="tieu-de">
                    <label>
                        Mô tả:
                    </label>
                </section>
                <section class="noi-dung">
                    <article class="input">
                        <textarea name="MoTa" placeholder="Nhập mô tả chủ đề..."></textarea>
                    </article>
                </section>
            </li>
            <li>
                <section class="tieu-de">
                    <label>
                        Hình đại diện:
                    </label>
                </section>
                <section class="noi-dung">
                    <article class="input">
                        <input type="file" name="MaHinhDaiDien" data-thu-muc="AnhDaiDien_ChuDe/" />
                    </article>
                </section>
            </li>
            <li>
                <section class="tieu-de">
                    <label>
                        Lịch:
                    </label>
                </section>
                <section class="noi-dung">
                    <article class="input">
                        <input data-input-type="lct-lich" name="name" value="" data-mac-dinh="23.12.1234" placeholder="Chọn ngày" />
                    </article>
                </section>
            </li>
        </ul>
        <section class="lct-khung-button">
            <button type="submit" class="chap-nhan">
                Tạo
            </button>
            <button type="reset" class="can-than">
                Làm lại
            </button>
        </section>
    </article>
</form>