@model DTOLayer.BinhLuanBaiVietDienDanDTO

<form data-doi-tuong="binh-luan-form" class="lct-form" data-an-rang-buoc @(Model != null ? "data-cap-nhat" : null)>
    @if (Model == null)
    {
        <input name="MaBaiVietDienDan" value="@ViewData["MaBaiVietDienDan"]" type="hidden" />   
    }
    else
    {
        <input name="Ma" value="@Model.ma" type="hidden" />
    }
    <ul style="flex-wrap: nowrap; padding: 0; margin: 0;">
        <li style="margin: 0; width: 100%;">
            <article class="noi-dung">
                <article class="input">
                    <textarea data-mac-dinh="@(Model != null ? Model.noiDung : null)" data-validate="bat-buoc" style="height: 20px;" name="NoiDung" placeholder="Viết bình luận của bạn" />
                </article>
            </article>
        </li>
        <li style="margin: 0; min-width: 34px; max-width: 34px;">
            <article class="noi-dung">
                <article class="input" style="border-left: 0;">
                    <input type="file" name="MaTapTin" data-dung-luong="10485760" data-an-hinh
                           @if (Model != null && Model.tapTin != null) {     @: data-ma-mac-dinh="@Model.tapTin.ma" data-loai-mac-dinh="BinhLuanBaiVietDienDan_TapTin"
                                                                                                             } />
                </article>
            </article>
        </li>
            @if (Model == null)
            {
                <li style="min-width: 55px; max-width: 55px; margin: 0; margin-left: 4px;">
                    <button style="padding: 0; margin: 0; width: 100%; height: 32px;" class="chap-nhan">Đăng</button>
                </li>
            }
            else
            {
                <li style="min-width: 114px; max-width: 110px; margin: 0; margin-left: 4px;">
                    <button style="padding: 0; margin: 0; width: 100%; height: 32px;" class="chap-nhan">Sửa</button>
                    <span style="min-width: 4px;"></span>
                    <button style="padding: 0; margin: 0; width: 100%; height: 32px;" class="chap-nhan" data-chuc-nang="huy" type="button">Hủy</button>
                </li>
            }
    </ul>
</form>
