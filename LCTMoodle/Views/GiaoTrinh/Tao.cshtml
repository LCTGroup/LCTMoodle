@model List<DTOLayer.GiaoTrinhViewDTO>

@{
    var khoaHoc = ViewData["KhoaHoc"] as DTOLayer.KhoaHocViewDTO;
    ViewData["TieuDe"] = "Soạn giáo trình - " + khoaHoc.ten;
    Layout = "~/Views/LCT/Khung.cshtml";

    ViewData["DieuHuong"] = new List<string>()
    {
        "Khóa học của tôi", "/KhoaHoc",
        khoaHoc.ten, "/KhoaHoc/" + khoaHoc.ma,
        "Soạn giáo trình", "/GiaoTrinh/" + khoaHoc.ma
    };
}
@section Styles {
    <link href="/Tao.css/GiaoTrinh" rel="stylesheet" />
}
@section Scripts {
    <script src="/Tao.js/GiaoTrinh"></script>
    <script>
        maKhoaHoc = '@khoaHoc.ma';
    </script>
}

<article class="hop">
    <section class="tieu-de">
        Soạn giáo trình
    </section>
    <section class="noi-dung">
        <article id="khung_giao_trinh" class="lct-bang khung-giao-trinh">
            <section class="thead">
                <article class="tr">
                    <section class="th">Công việc</section>
                    <section class="th">Mô tả</section>
                    <section class="th">Thời gian</section>
                </article>
            </section>
            <section class="tbody">                
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        @Html.Partial("~/Views/GiaoTrinh/_Item_Tao.cshtml", item)
                    }
                }
            </section>
            <form id="tao_giao_trinh_form" class="lct-form tao-giao-trinh-form tfoot">
                <section class="tr">
                    <section class="td">
                        <input type="hidden" name="KhoaHoc" value="@khoaHoc.ma" />
                        <article class="input">
                            <input data-validate="bat-buoc" type="text" name="CongViec" placeholder="Công việc" />
                        </article>
                    </section>
                    <section class="td">
                        <article class="input">
                            <input data-validate="bat-buoc" type="text" name="MoTa" placeholder="Mô tả" />
                        </article>
                    </section>
                    <section class="td">
                        <article class="input">
                            <input type="text" name="ThoiGian" placeholder="Thời gian" />
                        </article>
                        <section class="lct-khung-button">
                            <button type="submit" class="chap-nhan">
                                Thêm
                            </button>
                        </section>
                    </section>
                </section>
            </form>
        </article>
    </section>
</article>