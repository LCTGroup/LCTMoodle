@{
    var ketQua = BUSLayer.BinhLuanBUS.layTheoDoiTuong((string)ViewData["LoaiDoiTuong"], (int)ViewData["MaDoiTuong"]);
    var danhSachBinhLuan = ketQua.trangThai == 0 ? ketQua.ketQua as List<DTOLayer.BinhLuanDTO> : null;
}

<section data-doi-tuong="khung-binh-luan" class="khung-binh-luan">
    <section class="khung-danh-sach">
        <ul data-doi-tuong="danh-sach">
            @if (danhSachBinhLuan != null)
            {
                foreach (var binhLuan in danhSachBinhLuan)
                {
                    @Html.Partial("~/Views/BinhLuan/_Item.cshtml", binhLuan);
                }
            }
        </ul>
    </section>
    <section class="khung-form">
        <form data-doi-tuong="binh-luan-form" class="lct-form">
            <input name="Loai" value="@ViewData["LoaiDoiTuong"]" type="hidden" />
            <input name="DoiTuong" value="@ViewData["MaDoiTuong"]" type="hidden" />
            <ul style="flex-wrap: nowrap; padding: 0; margin: 0;">
                <li style="margin: 0; width: 100%;">
                    <article class="noi-dung">
                        <article class="input">
                            <textarea data-validate="bat-buoc" style="height: 20px;" name="NoiDung" placeholder="Viết bình luận của bạn" />
                        </article>
                    </article>
                </li>
                <li style="margin: 0; min-width: 34px; max-width: 34px;">
                    <article class="noi-dung">
                        <article class="input" style="border-left: 0;">
                            <input type="file" name="TapTin" />
                        </article>
                    </article>
                </li>
                <li style="min-width: 55px; max-width: 55px; margin: 0; margin-left: 4px;">
                    <button style="padding: 0; margin: 0; width: 100%; height: 32px;" class="chap-nhan">Đăng</button>
                </li>
            </ul>
        </form>
    </section>
</section>