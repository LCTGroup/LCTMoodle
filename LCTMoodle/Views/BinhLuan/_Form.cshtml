@model DTOLayer.BinhLuanDTO

<form data-doi-tuong="binh-luan-form" class="lct-form" data-an-rang-buoc @(Model != null ? "data-cap-nhat" : null)>
    <input name="LoaiDoiTuong" value="@ViewData["LoaiDoiTuong"]" type="hidden" />
    @if (Model == null)
    {
        <input name="MaDoiTuong" value="@ViewData["MaDoiTuong"]" type="hidden" />   
    }
    else
    {
        <input name="Ma" value="@Model.ma" type="hidden" />
    }
    <ul style="flex-wrap: nowrap; padding: 0; margin: 0;">
        <li style="margin: 0; width: 100%;">
            <article class="noi-dung">
                <article class="input">
                    <textarea data-mac-dinh="@(Model != null ? Model.noiDung : null)" data-validate="bat-buoc" style="height: 20px;" name="NoiDung" placeholder="Viết bình luận của bạn" />
                </article>
            </article>
        </li>
        <li style="margin: 0; min-width: 34px; max-width: 34px;">
            <article class="noi-dung">
                <article class="input" style="border-left: 0;">
                    <input 
                            @if (Model != null && Model.tapTin != null) 
                            {    
                                @: data-ma-mac-dinh="@Model.tapTin.ma" data-loai-mac-dinh="BinhLuan_@(Model.loaiDoiTuong)_TapTin"
                            } type="file" name="MaTapTin" />

                </article>
            </article>
        </li>
        <li style="min-width: 55px; max-width: 55px; margin: 0; margin-left: 4px;">
            <button style="padding: 0; margin: 0; width: 100%; height: 32px;" class="chap-nhan">@(Model == null ? "Đăng" : "Sửa")</button>
        </li>
    </ul>
</form>
